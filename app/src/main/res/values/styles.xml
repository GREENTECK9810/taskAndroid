<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bold_text">
        <item name="android:fontFamily">@font/segoeuibold</item>
    </style>

    <style name="regular_text">
        <item name="android:fontFamily">@font/segoeui</item>
    </style>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">#008488</item>
        <item name="colorControlNormal">#EBEBEB</item>
    </style>

</resources>
