<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer"
    tools:context=".HomePage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homePageToolbar"
            android:theme="@style/Base.ThemeOverlay.AppCompat.ActionBar">

        </androidx.appcompat.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:src="@drawable/profile_image"
            android:layout_gravity="center"
            android:layout_marginTop="37dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="26dp"
            android:text="Hi, Vishal!"
            android:textAppearance="@style/regular_text"
            android:textColor="@color/blue"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="26dp"
            android:text="You have 5 tasks today"
            android:textAppearance="@style/regular_text"
            android:textColor="@color/darkgrey"
            android:textSize="16sp"/>
        
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/go_button"
            android:layout_gravity="center"
            android:layout_marginTop="138dp"
            android:text="Go"
            android:textAppearance="@style/bold_text"
            android:textSize="16sp"
            android:textColor="@color/pink"
            android:stateListAnimator="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="match_parent"
        android:background="@color/darkgrey"
        android:layout_gravity = "start">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drawer"/>
    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>